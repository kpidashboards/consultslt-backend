# =========================================================
# AMBIENTE DA APLICAÇÃO
# =========================================================
APP_ENV=production
DEBUG=false

# =========================================================
# SERVIDOR
# =========================================================
HOST=0.0.0.0
PORT=8000

# =========================================================
# MONGODB (OBRIGATÓRIO)
# =========================================================
MONGO_URL=mongodb://127.0.0.1:27017
MONGO_DB=consultslt_db
DB_NAME=consultslt_db

# OBS:
# - Use MONGO_DB como padrão no código
# - DB_NAME fica apenas para compatibilidade se algum trecho usar

# =========================================================
# AUTENTICAÇÃO JWT
# =========================================================
JWT_SECRET=consultslt-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =========================================================
# SEED / DADOS INICIAIS
# =========================================================
ENABLE_DB_SEED=false

# =========================================================
# STORAGE LOCAL (UPLOADS / OCR / ROBÔS)
# =========================================================
LOCAL_STORAGE_PATH=C:/Users/admin-local/ServerApp/uploads

# =========================================================
# CORS (FRONTEND)
# =========================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://192.168.5.162:3000
